<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="MyPersistence"
		transaction-type="JTA">
		<jta-data-source>java:jboss/oracleDataSource</jta-data-source>
		<class>fr.cimut.ged.entrant.beans.db.Document</class>
		<class>fr.cimut.ged.entrant.beans.db.Categorie</class>
		<class>fr.cimut.ged.entrant.beans.db.Type</class>
		<class>fr.cimut.ged.entrant.beans.db.TypeSurcharge</class>
		<class>fr.cimut.ged.entrant.beans.db.Historique</class>
		<class>fr.cimut.ged.entrant.beans.db.Json</class>
		<properties>
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.cache.use_second_level_cache"	value="true" />
			<property name="hibernate.cache.use_query_cache" value="true" />
		</properties>
	</persistence-unit>
</persistence>